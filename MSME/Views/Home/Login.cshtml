<link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-6/assets/css/login-6.css"> *@
<section>
    &nbsp;
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card bg-body-tertiary border-1 shadow-sm rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <h3>Login</h3>
                                </div>
                            </div>
                        </div>
                        <form method="post" asp-controller="Home" asp-action="Login">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required>
                                        <label asp-for="Email" class="form-label"></label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Password" type="password" class="form-control" value="" placeholder="Password" required>
                                        <label asp-for="Password" class="form-label">Password</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input asp-for="Password" class="form-check-input" type="checkbox" value="" name="remember_me" id="remember_me">
                                        <label class="form-check-label text-secondary" for="remember_me">
                                            Keep me logged in
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-block text-md-center">
                                        <input class="btn  btn-primary" type="submit" asp-action="Login" value="Login" />
                                       
                                    </div>
                                </div>
                            </div>
                            
                        </form>
                       <form>
                            <div class="row">
                                <div class="col-12">
                                    <hr>
                                    <div class="d-flex flex-column justify-content-md-end">
                                         @* <a href="#!" class="link-secondary text-decoration-none" asp-action="Registration">Create new account</a> *@
                                        <input type="submit" value="Create new account" asp-action="UserRegistration" class="btn btn-primary" formnovalidate /> &nbsp;
                                        <a href="#!" class="link-secondary text-decoration-none">Forgot password</a>
                                    </div>
                                </div>
                            </div>
                       </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
